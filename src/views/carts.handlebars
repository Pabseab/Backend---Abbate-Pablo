<main>
<div class="box">
    <script>
     const socket = io();
      socket.on('products', products => {
        const productmain = document.querySelector('#main');
        productmain.innerHTML = products.map(products => `
          <tr>
            <td>${product.id}</td>
            <td>${product.title}</td>
            <td>${product.status ? 'Activo' : 'Inactivo'}</td>
            <td>${product.description}</td>
            <td>${product.price}</td>
            <td>
              ${product.thumbnails.length ? 
                `<img src="${product.thumbnails[0]}" alt="Imagen del producto">` :
                'Sin imagen'
              }
            </td>
            <td>${product.code}</td>
            <td>${product.stock}</td>
            <td>${product.category}</td>
          </tr>
        `).join('');
      });
    </script>
</div>
<script src="/socket.io/socket.io.js"></script>

</main>